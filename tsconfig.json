{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "tslib": ["./node_modules/tslib/tslib.d.ts"],
            "*": [
                "src/*",
                "demo/*"
            ]
        },
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "lib": ["dom", "es6"],
        "sourceMap": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "noEmitHelpers": false,
        "importHelpers": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false
}
